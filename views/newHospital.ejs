<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include modules/head.ejs %>
    <link rel="stylesheet" href="/stylesheets/hospital.css" />
  </head>
  <body>
    <%- include modules/navbar.ejs %>
    <main class="py-5 bg-primary-subtle">
      <div class="container-xxl">
        <form
          action="/hospital/create"
          method="post"
          class="form-register"
          enctype="multipart/form-data"
        >
          <fieldset>
            <legend>Registra tu hospital</legend>
            <p><%= typeof message != 'undefined' ? message : null %></p>

            <div>
              <label for="name" class="form-label">Nombre del hospital *</label>
              <input
                type="text"
                class="form-control"
                id="name"
                name="name"
                placeholder="Introduce el nombre del hospital"
              />
            </div>

            <div>
              <label for="email" class="form-label mt-2">Email *</label>
              <input
                type="email"
                class="form-control"
                id="email"
                name="email"
                placeholder="Introduce tu email"
              />
            </div>

            <div>
              <label for="password" class="form-label mt-2">Contraseña *</label>
              <input
                type="password"
                class="form-control"
                id="password"
                name="password"
                placeholder="Contraseña"
                autocomplete="off"
              />
            </div>

            <div>
              <label for="repPassword" class="form-label mt-2"
                >Repite la contraseña *</label
              >
              <input
                type="password"
                class="form-control"
                id="repPassword"
                name="repPassword"
                placeholder="Repita la contraseña"
                autocomplete="off"
              />
            </div>

            <div>
              <label for="address" class="form-label mt-2">Dirección *</label>
              <input
                type="text"
                class="form-control"
                id="address"
                name="address"
                placeholder="Introduce tu dirección"
                autocomplete="off"
              />
            </div>

            <div>
              <label for="city" class="form-label mt-2">Ciudad *</label>
              <input
                type="text"
                class="form-control"
                id="city"
                name="city"
                placeholder="Introduce tu ciudad"
                autocomplete="off"
              />
            </div>

            <div>
              <label for="phone_number" class="form-label mt-2"
                >Teléfono *</label
              >
              <input
                type="number"
                class="form-control"
                id="phone_number"
                name="phone_number"
                placeholder="Introduce tu teléfono"
                autocomplete="off"
              />
            </div>

            <div>
              <label for="description" class="form-label mt-2"
                >Descripción</label
              >
              <textarea
                class="form-control"
                id="description"
                name="description"
                rows="3"
                placeholder="Describe tu hospital"
              ></textarea>
            </div>

            <div>
              <label for="image" class="form-label mt-2"
                >Sube la foto del hospital</label
              >
              <input class="form-control" type="file" id="image" name="img" />
            </div>

            <button type="submit" class="btn btn-primary mt-3">
              Registrar
            </button>

            <button
              onclick="window.location.href='/'"
              class="btn btn-danger mt-2"
            >
              Cancelar
            </button>
          </fieldset>
        </form>
      </div>
    </main>

    <%- include modules/footer.ejs %>
  </body>
</html>
