<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include modules/head.ejs %>
    <link rel="stylesheet" href="/stylesheets/doctor.css" />
  </head>
  <body>
    <%- include modules/navbar.ejs %>

    <main class="bg-primary-subtle py-5">
      <div class="container-xxl">
        <form
          action="/doctor/edit/<%= doctor.doctor_id %>?h=<%= hospital_id %>"
          method="post"
          class="form-register"
        >
          <fieldset>
            <legend>Edita la información del médico</legend>
            <p style="color: red">
              <%= typeof message != 'undefined' ? message : null %>
            </p>

            <div class="form-group">
              <label for="name" class="form-label">Nombre *</label>
              <input
                type="text"
                class="form-control"
                id="name"
                name="name"
                value="<%= doctor.name %>"
                placeholder="Introduce el nombre"
              />
            </div>

            <div class="form-group mt-2">
              <label for="lastname" class="form-label">Apellidos *</label>
              <input
                type="text"
                class="form-control"
                id="lastname"
                name="lastname"
                value="<%= doctor.last_name %>"
                placeholder="Introduce los apellidos"
              />
            </div>

            <div class="form-group mt-2">
              <label for="degree" class="form-label">Licenciatura *</label>
              <input
                type="text"
                class="form-control"
                id="degree"
                name="degree"
                value="<%= doctor.degree %>"
                placeholder="Introduce la licenciatura"
                autocomplete="off"
              />
            </div>

            <div class="form-group mt-2">
              <label for="speciality" class="form-label">Especialidad *</label>
              <select class="form-select" id="speciality" name="speciality">
                <% specialities.forEach(speciality => { %>
                <option value="<%= speciality.speciality_id %>" <%= speciality.speciality_id === doctor.speciality_id ? "selected" : "" %>>
                  <%= speciality.name %>
                </option>
                <% }); %>
              </select>
            </div>

            <div class="form-group mt-2">
              <label for="description" class="form-label">Descripción</label>
              <textarea
                class="form-control"
                id="description"
                name="description"
                rows="3"
              ><%= doctor.description %></textarea>
            </div>

            <button type="submit" class="btn btn-primary mt-3">
              Guardar
            </button>

            <button
              type="button"
              onclick="window.location.href='/hospital/show/<%= hospital_id %>'"
              class="btn btn-danger mt-2"
            >
              Cancelar
            </button>
          </fieldset>
        </form>
      </div>
    </main>

    <%- include modules/footer.ejs %>
  </body>
</html>
